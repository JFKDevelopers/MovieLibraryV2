<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Activities.DetailActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="@layout/activity_detail"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <LinearLayout
        android:id="@+id/content_detail"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal">
            <ImageView android:id="@+id/movie_poster"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="256dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:contentDescription="@string/movie_poster"
                 />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:orientation="vertical">
            <TextView
                android:id="@+id/movie_title"
                android:textColor="@android:color/black"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:gravity="start"
                android:paddingBottom="32dp"
                />
            <TextView
                android:id="@+id/movie_tagline"
                android:textColor="@android:color/black"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="32dp"
                />
            <com.iarcuschin.simpleratingbar.SimpleRatingBar
                android:id="@+id/userRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srb_numberOfStars="5"
                app:srb_stepSize="0.5"
                app:srb_fillColor="@color/starColor"
                app:srb_borderColor="@color/starColor"
                android:paddingEnd="16dp"
                android:paddingRight="16dp"
                android:paddingStart="0dp"
                android:paddingLeft="0dp"
                />
            <!--android:layout_alignBottom="@id/movie_poster"
                android:layout_toRightOf="@id/movie_poster"
                android:layout_toEndOf="@id/movie_poster"-->
            </LinearLayout>
        </LinearLayout>

    <!-- RUNTIME -->
        <android.support.v7.widget.CardView
            android:id="@+id/runTimeCard"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardViewBG"
            android:padding="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/runtime"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold"
                    android:padding="8dp"
                    />
                <TextView
                    android:id="@+id/movie_runtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/textColorPrimary"
                    android:padding="8dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    <!-- RELEASE DATE -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardViewBG"
            android:padding="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/release_date"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold"
                    android:padding="8dp"
                    />
                <TextView
                    android:id="@+id/movie_releaseDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/textColorPrimary"
                    android:padding="8dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    <!-- GENRES -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardViewBG"
            android:padding="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/genres"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold"
                    android:padding="8dp"
                    />
                <TextView
                    android:id="@+id/movie_genres"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/textColorPrimary"
                    android:padding="8dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    <!-- OVERVIEW -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardViewBG"
            android:padding="8dp"
            app:cardUseCompatPadding="true">
            <!-- app:cardUseCompatPadding is necessary for padding between cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/overview"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/textColorPrimary"
                    android:textStyle="bold"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:paddingStart="8dp"
                    android:paddingRight="8dp"
                    android:paddingEnd="8dp"
                    />
                <TextView
                    android:id="@+id/movie_overview"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/textColorPrimary"
                    android:paddingLeft="16dp"
                    android:paddingStart="16dp"
                    android:paddingRight="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="8dp"
                    />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    <!-- Director -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardViewBG"
            android:padding="8dp"
            app:cardUseCompatPadding="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/director"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold"
                    android:padding="8dp"
                    />
                <TextView
                    android:id="@+id/movie_director"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textColor="@color/textColorPrimary"
                    android:padding="8dp"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    <!-- Cast -->
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardViewBG"
            card_view:contentPadding="8dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="@string/cast"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/movie_cast"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
                <!--<ListView
                    android:id="@+id/castLV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>-->
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cv_notes"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            card_view:cardElevation="1dp"
            card_view:cardCornerRadius="4dp"
            card_view:cardBackgroundColor="@color/cardViewBG"
            app:cardUseCompatPadding="true">

            <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:tools="http://schemas.android.com/tools"
                tools:layout_editor_absoluteY="81dp"
                tools:layout_editor_absoluteX="0dp">

                <TextView
                    android:layout_width="58dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:text="@string/notes"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:textStyle="bold"
                    android:id="@+id/textView"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp" />
                <TextView
                    android:id="@+id/movie_notes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingEnd="4dp"
                    android:paddingStart="4dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="8dp"
                    android:hint="@string/note_hint"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    app:layout_constraintLeft_toLeftOf="@+id/textView"
                    app:layout_constraintRight_toLeftOf="@+id/editButton"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />
                <ImageButton
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/edit"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/edit_button"
                    android:clickable="true"
                    android:gravity="end"
                    app:layout_constraintBottom_toBottomOf="@+id/textView"
                    app:layout_constraintRight_toRightOf="parent" />
            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>